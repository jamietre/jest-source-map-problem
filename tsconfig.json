{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "lib": ["es6", "scripthost", "es2017", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "paths": {
      "util/*": ["utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "inlineSources": true,
  }
}
